import java.util.Scanner;
public class Program2 {
    public static void main(String[] args) {
        Scanner num = new Scanner(System.in);
        System.out.println("Enter the weigh of dinosaur in killograms "); //requested the weight of a dinosaur
        int killograms = num.nextInt();
        float tonna = killograms / 1000f;
        int grams = killograms * 1000;
        double milligrams = killograms * 1000000;
        System.out.println("The weigh of dinosaur in tonna = " +tonna);
        System.out.println("The weigh of dinosaur in grams = " +grams);
        System.out.println("The weigh of dinosaur in milligrams = " +milligrams);
    }
}
